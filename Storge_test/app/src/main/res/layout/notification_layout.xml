<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_blackground"
    android:orientation="horizontal"
    android:descendantFocusability="afterDescendants">

    <ImageView
        android:id="@+id/notification_musician_img"
        android:layout_width="90.0dip"
        android:layout_height="90.0dip"
        android:background="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:descendantFocusability="afterDescendants">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:descendantFocusability="afterDescendants"
            >
            <TextView
                android:id="@+id/notification_music_title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:textColor="#00F"
                android:maxLines="1"
                android:textSize="20sp"
                android:text="无音乐播放"/>

            <ImageButton
                android:id="@+id/notification_exit_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_exit"
                android:layout_gravity="end"/>

        </LinearLayout>

            <TextView
                android:id="@+id/notification_musician"
                android:layout_width="300dp"
                android:layout_height="wrap_content"

                android:maxLines="1"
                android:textColor="#00F"
                android:textSize="16sp"
                android:text="无歌手"
                />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:descendantFocusability="afterDescendants">

                <ImageButton
                    android:id="@+id/notification_previous_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_last"/>

                <ImageButton
                    android:id="@+id/notification_play_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#00000000"
                    />
                <ImageButton
                    android:id="@+id/notification_next_button"
                    android:background="@drawable/ic_next"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                />

            </LinearLayout>
        </LinearLayout>
</LinearLayout>
