<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#66000000"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:background="#fff">
        <Button
            android:id="@+id/countdown_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="不定时"
            android:background="#00000000"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"/>
        <Button
            android:id="@+id/countdown_5_mins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5分钟"
            android:background="#00000000"
            android:textStyle="bold"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"/>

        <Button
            android:id="@+id/countdown_10_mins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10分钟"
            android:background="#00000000"
            android:textStyle="bold"
            android:textSize="20sp" />

        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>

        <Button
            android:id="@+id/countdown_30_mins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="半小时"
            android:background="#00000000"
            android:textStyle="bold"
            android:textSize="20sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"/>

        <Button
            android:id="@+id/countdown_60_mins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="一小时"
            android:background="#00000000"
            android:textStyle="bold"
            android:textSize="20sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/countdown_input_exit"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="3"
                android:hint="请输入自定义时间（分钟）"

                />
            <Button
                android:id="@+id/countdown_input_button"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="确定"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

        </LinearLayout>
        <TextView
            android:id="@+id/countdown_show_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="倒计时： 00:00"
            android:textSize="25dp"
            />


    </LinearLayout>
</LinearLayout>
